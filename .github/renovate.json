{
  "enabled": true,
  "timezone": "Europe/Amsterdam",
  "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
  "commitMessageSuffix": "[ci-skip]",
  "commitBody": "Signed-off-by: bjw-s <bjw-s@users.noreply.github.com>",
  "labels": ["upgrade", "bot"],
  "helm-values": {
    "fileMatch": ["cluster/.+\\.yaml$"]
  },
  "packageRules": [
    {
      "packageNames": ["blakeblackshear/frigate"],
      "versionScheme": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-(?<compatibility>.*)$"
    },
    {
      "packageNames": ["jacobalberty/unifi"],
      "allowedVersions": "<6.0"
    },
    {
      "packageNames": ["k8sathome/qbittorrent"],
      "allowedVersions": "<4.3.0"
    },
    {
      "datasources": ["docker"],
      "packageNames": [
        "k8sathome/radarr",
        "k8sathome/sonarr",
        "k8sathome/lidarr",
        "k8sathome/bazarr"
      ],
      "versioning": "nuget"
    }
  ]
}
