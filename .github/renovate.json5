{
  "enabled": true,
  "timezone": "Europe/Amsterdam",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard",
  "commitBody": "Signed-off-by: Bᴇʀɴᴅ Sᴄʜᴏʀɢᴇʀs <6213398+bjw-s@users.noreply.github.com>",
  // do not notify on closed, unmerged PRs
  "suppressNotifications": ["prIgnoreNotification"],
  // do not rebase PRs
  "rebaseWhen": "conflicted",
  "assignees": ["@bjw-s"],
  "helm-values": {
    "fileMatch": ["cluster/.+\\.yaml$"]
  },
  "regexManagers": [
    // regexManager to read and process HelmRelease files
    {
      "fileMatch": ["cluster/.+\\.yaml$"],
      "matchStrings": [
        "registryUrl=(?<registryUrl>.*?)\n *chart: (?<depName>.*?)\n *version: (?<currentValue>.*)\n"
      ],
      "datasourceTemplate": "helm"
    }
  ],
  "packageRules": [
    // Add labels according to package and update types
    {
      "datasources": ["docker"],
      "updateTypes": ["major"],
      "labels": ["renovate/image-release", "dependency/major"]
    },
    {
      "datasources": ["docker"],
      "updateTypes": ["minor"],
      "labels": ["renovate/image-release", "dependency/minor"]
    },
    {
      "datasources": ["docker"],
      "updateTypes": ["patch"],
      "labels": ["renovate/image-release", "dependency/patch"]
    },
    {
      "datasources": ["helm"],
      "commitMessageTopic": "Helm chart {{depName}}"
    },
    {
      "datasources": ["helm"],
      "updateTypes": ["major"],
      "labels": ["renovate/helm-chart", "dependency/major"]
    },
    {
      "datasources": ["helm"],
      "updateTypes": ["minor"],
      "labels": ["renovate/helm-chart", "dependency/minor"]
    },
    {
      "datasources": ["helm"],
      "updateTypes": ["patch"],
      "labels": ["renovate/helm-chart", "dependency/patch"]
    },
    // Custom version schemes
    {
      "packageNames": ["blakeblackshear/frigate"],
      "versionScheme": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-(?<compatibility>.*)$"
    },
    // Pin package versions
    {
      "packageNames": ["jacobalberty/unifi"],
      "allowedVersions": "<6.0"
    },
    {
      "packageNames": ["k8sathome/qbittorrent"],
      "allowedVersions": "<4.3.0"
    },
    // Version strategies
    {
      "datasources": ["docker"],
      "packageNames": [
        "plexinc/pms-docker"
      ],
      "versioning": "loose"
    },
    {
      "datasources": ["docker"],
      "packageNames": [
        "k8sathome/radarr",
        "k8sathome/sonarr"
      ],
      "versioning": "loose"
    },
    // Enable auto-merge
    {
      "datasources": ["docker"],
      "automerge": true,
      "requiredStatusChecks": null,
      "updateTypes": ["minor", "patch"],
      "packageNames": [
        "k8sathome/jackett"
      ]
    }
  ]
}
