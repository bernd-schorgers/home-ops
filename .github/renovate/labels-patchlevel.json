{
  "packageRules": [
    {
      "matchDatasources": ["helm", "docker"],
      "matchUpdateTypes": ["major"],
      "labels": ["deps/major"]
    },
    {
      "matchDatasources": ["helm", "docker"],
      "matchUpdateTypes": ["minor"],
      "labels": ["deps/minor"]
    },
    {
      "matchDatasources": ["helm", "docker"],
      "matchUpdateTypes": ["patch"],
      "labels": ["deps/patch"]
    }
  ]
}
