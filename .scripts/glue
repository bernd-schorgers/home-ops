#!/usr/bin/env zx

import { CommandFactory } from "./commands/CommandFactory.class.mjs"

$.verbose = false

const debug = argv["debug"] || false
if (debug) {
  $.verbose = true
}

const glueCommand = argv["_"][0]
argv["_"].splice(0, 1)

const factoryObject = new CommandFactory()
const commandObject = factoryObject.getCommand(glueCommand, argv)
await commandObject.run()
