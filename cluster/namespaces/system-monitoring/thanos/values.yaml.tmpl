---
query:
  replicaCount: 2
  replicaLabels:
    - replica
  http:
    ingress:
      enabled: true
      annotations:
        kubernetes.io/ingress.class: internal
        cert-manager.io/cluster-issuer: letsencrypt-production
        external-dns.alpha.kubernetes.io/target: cname--int.{{ index (datasource "cluster-vars").domains 0 }}
      hosts:
      - "thanos.{{ index (datasource "cluster-vars").domains 0 }}"
      tls:
      - hosts:
        - "thanos.{{ index (datasource "cluster-vars").domains 0 }}"

compact:
  retentionResolution1h: 2y

objstore:
  type: S3
  config:
    bucket: "thanos"
    endpoint: "minio.{{ index (datasource "cluster-vars").domains 0 }}:9000"
    region: ""
    access_key: "{{ (datasource "thanos").minio.access_key }}"
    secret_key: "{{ (datasource "thanos").minio.secret_key }}"
    insecure: false
    signature_version2: false
    put_user_metadata: {}
    http_config:
      idle_conn_timeout: 0s
      response_header_timeout: 0s
      insecure_skip_verify: false
    trace:
      enable: false
    part_size: 0
