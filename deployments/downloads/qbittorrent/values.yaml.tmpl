---
podAnnotations:
  configmap.reloader.stakater.com/reload: "qbittorrent-vpn"
  replicas-max: "1"

podSecurityContext:
  runAsUser: 1031
  runAsGroup: 100
  fsGroup: 100

env:
  TZ: "Europe/Amsterdam"
  WAIT_FOR_VPN: "true"
  UMASK: "022"

persistence:
  config:
    enabled: true
    emptyDir: true
    #existingClaim: qbittorrent-config
  media:
    enabled: true
    emptyDir: true
    #existingClaim: nfs-nas-media
    mountPath: /data/nas-media
  shared:
    enabled: true
    emptyDir: true

service:
  additionalServices:
  - enabled: true
    nameSuffix: bittorrent
    type: ClusterIP
    port:
      port: 24589
      name: bittorrent
      protocol: TCP
      targetPort: 24589

ingress:
  enabled: true
  annotations:
    kubernetes.io/ingress.class: nginx
    cert-manager.io/cluster-issuer: bjws-lan-ca-issuer
  hosts:
    - host: qbittorrent.{{ (datasource "cluster-vars").domain.internal }}
      paths:
        - path: /
  tls:
    - secretName: tls.qbittorrent
      hosts:
        - qbittorrent.{{ (datasource "cluster-vars").domain.internal }}

resources:
  requests:
    memory: "256M"
  limits:
    memory: "1024M"

additionalVolumes:
  - name: qbittorrent-scripts
    configMap:
      name: qbittorrent-scripts
      defaultMode: 511

additionalVolumeMounts:
  - mountPath: /config/custom-cont-init.d
    name: qbittorrent-scripts

addons:
  vpn:
    enabled: true
    type: wireguard

    imagePullPolicy: IfNotPresent

    securityContext:
      runAsUser: 568
      runAsGroup: 568

    env:
      TZ: "Europe/Amsterdam"
      KILLSWITCH: "true"
      KILLSWITCH_EXCLUDEDNETWORKS_IPV4: {{ (datasource "cluster-vars").networks.k8s_cluster }};{{ (datasource "cluster-vars").networks.k8s_services }};{{ (datasource "cluster-vars").networks.management_lan }}

    configFile: {{- (datasource "qbittorrent").vpn.config | strings.Indent 6 | printf " |\n%v" }}
    scripts:
      up:  |-
        #!/bin/bash
        echo "connected" > /shared/vpnstatus

      down:  |-
        #!/bin/bash
        echo "disconnected" > /shared/vpnstatus
